Dashboard

<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="btn">+ Add New</a>
</div>


<ul class="admin-posts">
    <% data.forEach(post => { %>

        <li>

            <a href="/post/<%= post._id %>"><b><%= post.title %> &nearr;</b></a>

            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>

                <form action="/delete-post/<%= post._id %>?method=delete" method="POST">
                    <input type="submit" class="btn" value="Delete">
                </form>
                
            </div>
            
            

        </li>

    <% }) %>
</ul>